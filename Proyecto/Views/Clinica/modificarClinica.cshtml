@model WebApplication1.Models.Clinica

@{
    ViewBag.Title = "modificarClinica";
}

<h2>modificarClinica</h2>


@using (Html.BeginForm("modificarClinica","Clinica",FormMethod.Post))
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Clinicas</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
